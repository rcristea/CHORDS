<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Darkk Theme -->
    <style name="AppTheme.Darkk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkkColorPrimary</item>
        <item name="colorAccent">@color/darkkColorAccent</item>
        <item name="android:textColor">@color/darkkColorText</item>
        <item name="android:background">@color/darkkColorPrimary</item>
    </style>

</resources>
